{
  "name": "proshop",
  "version": "1.0.0",
  "description": "eCommerce app built with the MERN stack",
  "main": "server.ts",
  "scripts": {
    "data:import": "ts-node backend/data/seeder.ts -i",
    "data:destroy": "ts-node backend/data/seeder.ts -d",
    "server": "nodemon backend/server.ts",
    "client": "npm run dev --prefix frontend",
    "start:dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "node backend/dist/server.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "lodash": "^4.17.21",
    "mongoose": "^7.0.1",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.8",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  },
  "nodemonConfig": {
    "events": {
      "start": "echo '--------------------\n'& clear || cls"
    }
  },
  "author": "Hossein Rezaei",
  "license": "ISC"
}
